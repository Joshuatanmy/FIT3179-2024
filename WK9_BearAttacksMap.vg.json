{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title" : "Bear Attacks in North America",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "layer":[{
      "data": {
        "url": "https://raw.githubusercontent.com/Joshuatanmy/FIT3179-2024/refs/heads/main/ne.topojson",
        "format":{
          "type": "topojson",
          "feature": "ne_50m_admin_1_states_provinces"
        }
      },
      "mark": {
        "type": "geoshape", 
        "fill":"lightgrey", 
        "stroke":"white"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Joshuatanmy/FIT3179-2024/refs/heads/main/ne.topojson",
        "format":{
          "type": "topojson",
          "feature": "ne_50m_admin_1_states_provinces"
        }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data":{
              "url": "https://raw.githubusercontent.com/Joshuatanmy/FIT3179-2024/refs/heads/main/data%20(3)%20(2).csv"
            },
            "key": "Location",
            "fields": [" age", "Type of bear", "Year"]
          }
        }
      ],
      "mark": {
        "type": "geoshape", 
        "stroke":"white"
      },
      "encoding": {
        "color":{
          "field":" age",
          "type": "quantitative",
          "scale": {
                "domain": [1, 25, 75],
                "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
          }
        }
      }
    },
    {
      
      "data": {
        "url": "https://raw.githubusercontent.com/Joshuatanmy/FIT3179-2024/refs/heads/main/data%20(3).csv"
      },
      "transform": [
        {"filter": "datum.Latitude"}      
      ],
      "mark": {
        "type": "circle"
      },
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "tooltip": [
              {"field": 
              "Location", 
              "type": "nominal", 
              "title":"Country"
              },
              {
                "field": "Name",
                "type": "nominal",
                "title": "Victim Name"
              },
              {"field": " age", 
              "type": "quantitative",
              "title": "Age of victim"
              },
              {
                "field": "Description",
                "type": "nominal",
                "title": "Description of Attack"
              }
          ]
      }
    },
      {
      "data": {
        "url": "https://raw.githubusercontent.com/Joshuatanmy/FIT3179-2024/refs/heads/main/ne.topojson",
        "format":{
          "type": "topojson",
          "feature": "ne_110m_graticules_15"
        }
      },
      "mark": {
        "type": "geoshape", 
        "fill":"", 
        "stroke":"black",
        "opacity":0.4
      }
    }
    ]
  }